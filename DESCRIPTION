Type: Package
Package: worldmet
Title: Import Surface Meteorological Data from NOAA Integrated Surface
        Database (ISD)
Version: 0.10.0
Authors@R: c(
    person("David", "Carslaw", , "david.carslaw@york.ac.uk", role = c("aut", "cre"),
           comment = c(ORCID = "0000-0003-0991-950X")),
